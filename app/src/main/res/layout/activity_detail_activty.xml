<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_activty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abdymalikmulky.iak.DetailActivty">

    <TextView
        android:text="Minggu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="5sp"
        android:id="@+id/detail_hari" />

    <TextView
        android:text=" 22 November 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_tanggal"
        android:layout_below="@+id/detail_hari"
        android:layout_alignParentStart="true"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rain"
        android:layout_marginTop="21dp"
        android:id="@+id/detail_image"
        android:layout_below="@+id/detail_tanggal"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/detail_image"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity : "/>
            <TextView
                android:id="@+id/detail_humidity"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85% "/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="RAIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/detail_jenis" />
</RelativeLayout>
